            </GridPane>
            <Button onAction="#onVerDetalle" styleClass="link-button" text="Ver detalle del pedido" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="continueButton" onAction="#onContinuarAction" maxWidth="Infinity" styleClass="primary-button" text="Ir a pagar" />
        </VBox>
    </right>
